        <module>atlas-db</module>
        <module>atlas-model</module>
        <module>atlas-dao</module>
        <module>atlas-test</module>
        <module>atlas-utils</module>
        <module>atlas-analytics</module>
        <module>netcdf-reader</module>
        <module>atlas-skin</module>
