    <profiles>
        <profile>
            <id>nightly</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <configuration>
                            <webResources>
                                <resource>
                                    <includes>
                                        <include>MydasServerConfig.xml</include>
                                    </includes>
                                    <directory>src/main/webapp</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <includes>
                                        <include>jsp/includes/end_body.jsp</include>
                                        <include>web.xml</include>
                                        <include>context.xml</include>
                                    </includes>
                                    <directory>src/main/webapp/WEB-INF</directory>
                                    <targetPath>WEB-INF</targetPath>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <includes>
                                        <include>context.xml</include>
                                    </includes>
                                    <directory>src/main/nightly/META-INF</directory>
                                    <targetPath>META-INF</targetPath>
                                    <filtering>true</filtering>
                                </resource>
                            </webResources>
                        </configuration>
                    </plugin>
                </plugins>

            </build>
        </profile>
        <profile>
            <id>ci</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.groovy.maven</groupId>
                        <artifactId>gmaven-plugin</artifactId>
                        <version>1.0</version>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <!--
                            Fetch build version information - thanks to Adam Monsen,
                            http://maven-users.828.n2.nabble.com/buildnumber-maven-plugin-git-td5048798.html
                            -->
                            <source>
                                def env = System.getenv()
                                def gitcmd = "git"
                                print env
                                if (env['com.apple.java.jvmMode'])
                                    gitcmd = "/usr/local/git/bin/git"
                                if (env['OS'] =~ /^Windows/)
                                    gitcmd = "cmd /c ${gitcmd}"
                                def gitDescribe = """${gitcmd} describe""".execute()
                                project.properties['versionDescriptor'] = gitDescribe.in.text.trim()
                                project.properties['buildDate'] = "" + new Date()
                            </source>
                        </configuration>
                    </plugin>
                </plugins>
                <finalName>${project.artifactId}-${versionDescriptor}</finalName>
            </build>
        </profile>
    </profiles>
